{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "22.0.0",

  "compilerOptions": {
    "lib": ["es2023"],
    "module": "esnext",
    "target": "esnext",

    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",

    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "types": ["vitest/globals"]
}
